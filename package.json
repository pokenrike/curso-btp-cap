 },
 "scripts": {
  "start": "cds-serve",
  "watch-alumnos": "cds watch --open alumnos/webapp/index.html?sap-ui-xx-viewCache=false",
  "undeploy": "cf undeploy Alumnos --delete-services --delete-service-keys --delete-service-brokers",
  "build": "rimraf resources mta_archives && mbt build --mtar archive",
  "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
  "watch-cursos": "cds watch --open cursos/webapp/index.html?sap-ui-xx-viewCache=false",
  "watch-estudiantesbycursos": "cds watch --open estudiantesbycursos/webapp/index.html?sap-ui-xx-viewCache=false"
 },
 "cds": {
  "requires": {
   "[development]": {
    "auth": {
     "kind": "mocked",
     "users": {
      "aluno.viewer@test.com": {
       "password": "initial",
       "roles": [
        "viewer"
       ]
      },
      "cfurigo@coachit.com.br": {
       "password": "super",
       "roles": [
        "admin",
        "viewer"
       ]
      }
     }
    }
   },
   "[production]": {
    "db": "hana",
    "auth": "xsuaa"
   },
   "html5-repo": true
  },
  "sql": {
   "native_hana_associations": false
  },
  "fiori": {
   "draft_deletion_timeout": "1d"
  },
  "i18n": {
   "default_language": "es",
   "folders": [
    "_i18n",
    "i18n",
    "assets/i18n"
   ]
  }
 },
 "sapux": [
